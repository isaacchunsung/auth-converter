{
  "name": "json-viewer",
  "version": "1.0.0",
  "description": "JSON file viewer with easy copy functionality",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "web": "node server.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "json",
    "viewer",
    "copy",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.cs.jsonviewer",
    "productName": "JSON Viewer by CS",
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "fileAssociations": [
      {
        "ext": "json",
        "name": "JSON File",
        "description": "JSON Document",
        "role": "Viewer"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "JSON File",
            "CFBundleTypeRole": "Viewer",
            "LSHandlerRank": "Alternate",
            "LSItemContentTypes": [
              "public.json"
            ]
          }
        ]
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "fileAssociations": [
        {
          "ext": "json",
          "name": "JSON File",
          "description": "JSON Document"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "mimeTypes": [
        "application/json"
      ]
    }
  }
}
